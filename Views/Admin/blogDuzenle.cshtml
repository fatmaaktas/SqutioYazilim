@model SqutioYzlm.Models._site
@{
    ViewBag.Title = "blogDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.active6 = "active";
}




<!-- Bootstrap 4.1-->
<link rel="stylesheet" href="/Content/admincss/bootstrap.min.css">
<!--alerts CSS -->
<link href="/Content/admincss/sweetalert.css" rel="stylesheet" type="text/css">

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
  
    <!-- Main content -->
    <section class="content">
        <div class="container">

            <div class="row">
                <div class="col-12">
                    <!-- /.box -->
                    <div class="box">
                        <div class="box-header with-border bg-light">
                            <h4 class="box-title">@Model.m_blog.blog_baslik</h4>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body wizard-content">


                            <!-- Step 1 -->

                            <form method="post" action="/Admin/blogDuzenle" name="frm_mm">
                                <input type="hidden" name="id" value="@Model.m_blog.id" />
                                
                                <section>
                                    <div class="row" style="border:1px solid #e1e1e1;padding:20px;">
                                        <div class="col-md-12">
                                            <div class="form-group">

                                                <label for="wfirstName2">Başlık : </label>
                                                <input type="text" name="blog_baslik" class="form-control" value="@Model.m_blog.blog_baslik" />
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">

                                                <label for="wfirstName2">Yazı : </label>
                                                <textarea name="blog_yazi"  class="textarea required" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" rows="15">@Model.m_blog.blog_yazi</textarea>
                                            </div>
                                        </div>
                                        

                                        



                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="submit" value="Kaydet" class="btn btn-default btn-primary" />
                                            </div>
                                        </div>

                                        
                                    </div>
                                </section>
                            </form>

                            <!-- Step 2 -->




                        </div>
                        <!-- /.box-body-->
                    </div>
                    <!-- /.box -->
                   

                </div>
            </div>

        </div>
    </section>
    <!-- /.content -->
</div>
<script>
    $('#blog_aciklama').wysihtml5({

        toolbar: {

            "font-styles": true, // Font styling, e.g. h1, h2, etc.
            "emphasis": true, // Italics, bold, etc.
            "lists": true, // (Un)ordered lists, e.g. Bullets, Numbers.
            "html": true, // Button which allows you to edit the generated HTML.
            "link": true, // Button to insert a link.
            "image": true, // Button to insert an image.
            "color": false, // Button to change color of font
            "blockquote": true // Blockquote
            //"size": <buttonsize> // options are xs, sm, lg
        }
    });
</script>
<!-- /.content-wrapper -->
<!-- Bootstrap 4.1-->
<script src="/Content/adminjs/bootstrap.min.js"></script>

